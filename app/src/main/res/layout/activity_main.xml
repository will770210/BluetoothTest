<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/paired_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_paired_devices" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:id="@+id/paired_devices"
        android:layout_below="@+id/text_paired_devices"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true" />

    <TextView android:text="@string/new_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paired_devices"
        android:layout_marginTop="10dp"
        android:id="@+id/text_new_devices" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:id="@+id/new_devices"
        android:layout_marginTop="300dp"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/btn_scan"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/new_devices" />

</RelativeLayout>
